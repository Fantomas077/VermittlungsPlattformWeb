                </div>
            </div>
            <a href="/Admin/Users/Index" class="block mt-4 text-sm text-white opacity-75 hover:opacity-100 transition">
                View More <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>

        <!-- Kommentare Card -->
        <div class="bg-green-500 text-white shadow-lg rounded-lg p-6">
