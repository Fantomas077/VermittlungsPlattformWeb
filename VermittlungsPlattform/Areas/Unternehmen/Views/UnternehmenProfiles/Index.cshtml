@model IEnumerable<VermittlungsPlattform.Models.Db.UnternehmenProfile>
@using System.Security.Claims

@{
    ViewData["Title"] = "Index";
}



<div class="card border-primary mb-3">
    <div class="card-header bg-primary text-white">Meine Company</div>
    <div class="card-body">
        <div class="container">
            <div class="row pt-4 pb-2">

                <div class="col-12 text-end">
                    <a asp-controller="UnternehmenProfiles" asp-action="Create" class="btn btn-primary">Create New Company <i class="bi bi-plus-circle"></i></a>
                </div>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>
                             Name
                        </th>
                        <th>
                             Branche
                        </th>
                        <th>
                             Location
                        </th>
                        <th>
                             Description
                        </th>
                        <th>
                             Webseite
                        </th>
                         <th>
                             Link
                        </th>
                        <th>
                             Logo
                        </th>
                        
                        <th></th>
                    </tr>

                </thead>

                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.Name))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Branche</td>
                            <td>@obj.Location</td>
                            <td> @Html.Raw(obj.Description)</td>
                            <td>@obj.Webseite</td>
                            <td>@obj.Link</td>
                            <td><img class="img-thumbnail" src="/images/LogoCompany/@obj.ImageName" style="max-width:70px; max-height:70px" /></td>
                            

                            
                            <td style="width:300px">
                                <div class="btn-group d-flex justify-content-center ">
                                    <a asp-controller="UnternehmenProfiles" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary me-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a asp-controller="UnternehmenProfiles" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-success me-2"><i class="bi bi-pencil-square"></i> Details</a>
                                    <a asp-controller="UnternehmenProfiles" asp-action="delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>

        </div>

    </div>
</div>