<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="card border-secondary mb-3" style="max-width: 100%;">
        <div class="card-header bg-primary text-light">Create Company Profile</div>
        <div class="card-body">

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Enter company name" />
                <label asp-for="Name">Company Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Branche" class="form-control" placeholder="Enter industry" />
                <label asp-for="Branche">Industry</label>
                <span asp-validation-for="Branche" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Location" class="form-control" placeholder="Enter location" />
                <label asp-for="Location">Location</label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Webseite" class="form-control" placeholder="Enter website URL" />
                <label asp-for="Webseite">Website</label>
                <span asp-validation-for="Webseite" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Link" class="form-control" placeholder="Enter link" />
                <label asp-for="Link">Additional Link</label>
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Imagename" class="control-label"></label>
                <input type="file" name="MainImage" class="form-control" />
                <span asp-validation-for="Imagename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Gallery</label>
                <input type="file" name="GalleryImages" multiple class="form-control" />

            </div>
            <div class="row mt-5">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6">
                    <a asp-controller="Menus" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>
