@model IEnumerable<VermittlungsPlattform.Models.Db.CompanyProfile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Webseite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Webseite)
            </td>
            <td>
            @*     @Html.DisplayFor(modelItem => item.Imagename) *@
                    <img class="img-thumbnail" src="/images/LogoCompany/@item.Imagename" style="max-width:100px" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<div class="container-xl px-4 mt-4">
    <style>
       /*  body {
            
            background-color: #f2f6fc;
            color: #69707a;
        } */

        .img-account-profile {
            height: 10rem;
        }

        .rounded-circle {
            border-radius: 50% !important;
        }

        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);
        }

            .card .card-header {
                font-weight: 500;
            }

        .form-control, .dataTable-input {
            display: block;
            width: 100%;
            padding: 0.875rem 1.125rem;
            font-size: 0.875rem;
            font-weight: 400;
            color: #69707a;
            background-color: #fff;
            border: 1px solid #c5ccd6;
            border-radius: 0.35rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        textarea.form-control {
            resize: none;
        }

        .nav-borders .nav-link.active {
            color: #0061f2;
            border-bottom-color: #0061f2;
        }

        .nav-borders .nav-link {
            color: #69707a;
            border-bottom-width: 0.125rem;
            border-bottom-style: solid;
            border-bottom-color: transparent;
            padding: 0.5rem;
            margin: 0 1rem;
        }

        .gallery-images {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

            .gallery-images img {
                width: 100%;
                max-width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 8px;
                box-shadow: 0 0.15rem 0.5rem 0 rgb(33 40 50 / 10%);
            }
    </style>

    <!-- Company Profile Navigation -->
 
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Company Logo</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Upload Logo</button>
                </div>
            </div>
            <!-- Company Gallery -->
            <div class="card mt-4">
                <div class="card-header">Company Gallery</div>
                <div class="card-body">
                    <div class="gallery-images">
                        <img src="https://via.placeholder.com/100" alt="Gallery Image 1">
                        <img src="https://via.placeholder.com/100" alt="Gallery Image 2">
                        <img src="https://via.placeholder.com/100" alt="Gallery Image 3">
                        <img src="https://via.placeholder.com/100" alt="Gallery Image 4">
                    </div>
                    <input  type="file" multiple class="form-control"/>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Company Details</div>
                <div class="card-body">
                    <form>
                        <!-- Company Name -->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputCompanyName">Company Name</label>
                            <input class="form-control" id="inputCompanyName" type="text" placeholder="Enter company name" value="Your Company Name">
                        </div>
                        <!-- Form Row -->
                        <div class="row gx-3 mb-3">
                            <!-- Industry -->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputIndustry">Industry</label>
                                <input class="form-control" id="inputIndustry" type="text" placeholder="Enter industry" value="Technology">
                            </div>
                            <!-- Location -->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Location</label>
                                <input class="form-control" id="inputLocation" type="text" placeholder="Enter location" value="Berlin, Germany">
                            </div>
                        </div>
                        <!-- Description -->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputDescription">Description</label>
                            <textarea class="form-control" id="inputDescription" rows="3" placeholder="Enter a brief description about your company">Lorem ipsum dolor sit amet...</textarea>
                        </div>
                        <!-- Website -->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputWebsite">Website</label>
                            <input class="form-control" id="inputWebsite" type="url" placeholder="Enter your website URL" value="https://www.companywebsite.com">
                        </div>
                        <!-- Link -->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputWebsite">Link</label>
                            <input class="form-control" id="inputWebsite" type="url" placeholder="Enter your website URL" value="https://www.companywebsite.com">
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="button">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
}