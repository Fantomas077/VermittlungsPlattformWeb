@model VermittlungsPlattform.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "LoginStudent";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register</title>

    <style>
        body {
            background: #f6f9fc;
        }

        .text-theme {
            color: #5369f8 !important;
        }

        .btn-theme {
            background-color: #5369f8;
            border-color: #5369f8;
            color: #fff;
        }

            .btn-theme:hover {
                background-color: #4354c7;
                border-color: #4354c7;
                color: #fff;
            }

        /* Flexbox container for aligning button and "forgot password" link */
        .login-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Style for the "forgot password" link */
        .forgot-password {
            font-size: 0.9rem;
            color: #5369f8;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

    </style>
</head>
<body>

    <div id="main-wrapper" class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card border-0">
                    <div class="card-body p-0">
                        <div class="row no-gutters">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="mb-5">
                                        <h3 class="h4 font-weight-bold text-theme"><span style="color:#3498db;">Log</span><span style="color:#2ecc71;">In</span></h3>
                                    </div>
                                    <h6 class="h5 mb-0">Welcome Back!</h6>
                                    <p class="text-muted mt-2 mb-5">A platform connecting students and companies for internship opportunities. Register to get started!</p>

                                    <form asp-action="LoginStudent">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="form-control" id="exampleInputEmail1" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-5">
                                            <label asp-for="Password" class="control-label">Password</label>
                                            <input asp-for="Password" class="form-control" id="exampleInputPassword1" type="password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="login-actions">
                                            <button type="submit" value="LoginStudent" class="btn btn-theme">Login</button>
                                            <a href="/ForgotPassword" class="forgot-password">Forgot your password?</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <img src="/logo.jpg" style="max-width:100%; max-height:100%" />
                            </div>

                        </div>
                    </div>
                    <!-- end card-body -->
                </div>
                <!-- end card -->
                <p class="text-muted text-center mt-3 mb-0">Don't have an account? <a href="/Account/RegisterUnternehmen" class="text-primary ml-1">Register</a></p>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end main-wrapper -->

</body>
</html>

