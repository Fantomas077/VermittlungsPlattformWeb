@using VermittlungsPlattform.Models.Db
@model VermittlungsPlattform.Models.Db.UnternehmenProfile
@{
    ViewData["Title"] = "CompanyDetails";
    List<VermittlungsPlattform.Models.Db.PraktikumStelle>? Stelle = ViewData["Stelle"] as List<PraktikumStelle> ?? new List<PraktikumStelle>();
    List<VermittlungsPlattform.Models.Db.CompanyGallery>? gallery = ViewData["gallery"] as List<CompanyGallery> ?? new List<CompanyGallery>();
    List<VermittlungsPlattform.Models.Db.Comment>? comment = ViewData["comment"] as List<Comment> ?? new List<Comment>();
    List<VermittlungsPlattform.Models.Db.User>? user = ViewData["User"] as List<User> ?? new List<User>();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@Model.Name - Company Details</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Company details page for @Model.Name" name="description">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Custom Styles -->
    <style>
        .slider {
            position: relative;
            overflow: hidden;
        }

        .slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

            .slides img {
                width: 100%;
                border-radius: 8px;
                height: 300px;
            }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            z-index: 1;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }
    </style>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <!-- Header Section -->
        <div class="bg-gray-800 text-white rounded-lg p-6 mb-8 shadow-lg">
            <h1 class="text-3xl font-bold">@Model.Name</h1>
            <nav aria-label="breadcrumb">
                <ol class="flex space-x-2">
                    <li><a href="/" class="hover:underline">Home</a></li>
                    <li>/</li>
                    <li><a href="/Unternehmen" class="hover:underline">Unternehmen</a></li>
                    <li>/</li>
                    <li>@Model.Name</li>
                </ol>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column: Company Info and Description -->
            <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
                <div class="flex items-center mb-6">
                    <img src="/images/LogoCompany/@Model.ImageName" alt="@Model.Name Logo" class="w-24 h-24 rounded-lg mr-4">
                    <div>
                        <h3 class="text-xl font-semibold">@Model.Name</h3>
                        <p class="text-gray-600"><i class="fa fa-map-marker-alt text-blue-500 mr-2"></i>@Model.Location</p>
                    </div>
                </div>

                <div class="mb-6">
                    <p>@Html.Raw(Model.Description)</p>
                </div>

                <!-- Affichage des commentaires -->
                <div class="mt-6">
                    <h5 class="text-md font-semibold mb-4">Kommentare</h5>
               
                @foreach (var item in comment)
                    {
                        var userObj = user.FirstOrDefault(x => x.Id == item.UserId);
                        
                        
                        <ul class="space-y-4">
                            <li class="bg-gray-50 p-4 rounded-lg shadow-md">
                                <p><strong>@userObj?.Name</strong> <span class="text-sm text-gray-500"> | @item.CreateDate</span></p>
                                <p>@item.CommentText</p>
                            </li>
                        </ul>
                    }
                  
                </div>

                <!-- Formulaire de commentaires -->
                <div class="mt-12 flex justify-center">
                    <div class="bg-gray-50 p-6 rounded-lg shadow-md w-full ">
                        
                        <form asp-action="SubmitComment" method="post" asp-controller="Unternehmen">
                            <input type="hidden" name="UnternehmenId" value="@Model.Id" />
                            <div class="mb-4">
                                <label class="block text-gray-700">Ihr Kommentar</label>
                                <textarea class="w-full p-3 border border-gray-300 rounded-lg" id="comment" name="comment" rows="4"></textarea>
                            </div>
                            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg w-full">Senden</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Right Column: Sidebar with Company Info and Job Offers -->
            <div class="col-span-1">
                <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
                    <h4 class="text-lg font-semibold mb-4">Company Info</h4>
                    <p><i class="fa fa-angle-right text-blue-500 mr-2"></i>Branche: @Model.Branche</p>
                    <p><i class="fa fa-angle-right text-blue-500 mr-2"></i>Website: <a href="@Model.Webseite" class="text-blue-500 hover:underline">@Model.Webseite</a></p>
                </div>

                <!-- Job Offers -->
                @if (Stelle.Any())
                {
                    <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
                        <h4 class="text-lg font-semibold mb-4">Stellenangebote</h4>
                        <p class="text-4xl font-bold text-blue-500">@Stelle.Count()</p>
                        <a href="/Stelleangebote/ByCompany/@Model.Id" class="bg-blue-500 text-white px-4 py-2 rounded-lg inline-block mt-4">Zu den Stellenangeboten</a>
                    </div>
                }

                <!-- Image Gallery (Slider) -->
                @if (gallery.Any())
                {
                    <div class="mb-6">
                        <h4 class="text-lg font-semibold mb-4">Galerie</h4>
                        <div class="slider">
                            <div class="slides">
                                @foreach (var item in gallery.OrderBy(x => x.Id))
                                {
                                    <img src="/images/LogoCompany/@item.ImageName" alt="Gallery Image">
                                }
                            </div>
                            <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
                            <button class="next" onclick="moveSlide(1)">&#10095;</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- JavaScript pour le slider -->
    <script>
        let currentIndex = 0;

        function moveSlide(direction) {
            const slides = document.querySelector('.slides');
            const totalSlides = slides.children.length;
            currentIndex = (currentIndex + direction + totalSlides) % totalSlides;
            const slideWidth = slides.children[0].clientWidth;
            slides.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
        }
    </script>
</body>

</html>
