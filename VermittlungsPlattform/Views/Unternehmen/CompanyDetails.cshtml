@using VermittlungsPlattform.Models.Db
@model VermittlungsPlattform.Models.Db.UnternehmenProfile
@{
    ViewData["Title"] = "CompanyDetails";
    List<VermittlungsPlattform.Models.Db.PraktikumStelle>? Stelle = new List<VermittlungsPlattform.Models.Db.PraktikumStelle>();
    if (ViewData["Stelle"] != null)
    {
        Stelle = ViewData["Stelle"] as List<PraktikumStelle>;
    }
    List<VermittlungsPlattform.Models.Db.CompanyProfileGallery>? gallery = new List<VermittlungsPlattform.Models.Db.CompanyProfileGallery>();
    if (ViewData["gallery"] != null)
    {
        gallery = ViewData["gallery"] as List<CompanyProfileGallery>;
    }

    
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@Model.Name - Company Details</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Company details page for @Model.Name" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Styles -->
    <style>
        .slider {
            position: relative;
            width: 100%;
            max-width: 500px;
            margin: auto;
            overflow: hidden;

        }

        .slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

            .slides img {
                width: 100%;
                border-radius: 5px;
                height:300px;
            }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }
    </style>
</head>

<body>
    <div class="container-xxl  p-0">
        <div class="container rounded-3 p-5 my-4" style="background-color:darkslategrey; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <h1 class="display-3 text-white mb-3 animated slideInDown">@Model.Name</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb text-uppercase">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Unternehmen">Unternehmen</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
        </div>

        <!-- Company Details Start -->
        <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <div class="row gy-5 gx-4">
                    <div class="col-lg-8">
                        <div class="d-flex align-items-center mb-5">
                            <img class="flex-shrink-0 img-fluid border rounded" src="/images/LogoCompany/@Model.ImageName" alt="@Model.Name Logo" style="width: 100px; height: 100px;">
                            <div class="text-start ps-4">
                                <h3 class="mb-3">@Model.Name</h3>
                                <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@Model.Location</span>
                            </div>
                        </div>

                        <!-- Description de l'entreprise -->
                        <div class="mb-5">
                            <p>@Model.Description</p>
                        </div>

                        

                        <!-- Section de commentaires -->
                        <div class="mb-5">
                            <h4 class="mb-4">Kommentare</h4>

                            <!-- Formulaire pour ajouter un commentaire -->
                            <form action="/Unternehmen/AddComment" method="post">
                                <div class="mb-3">
                                    <label for="comment" class="form-label">Ihr Kommentar</label>
                                    <textarea class="form-control" id="comment" name="comment" rows="4"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Envoyer</button>
                            </form>

                            <!-- Affichage des commentaires -->
                            <div class="mt-4">
                                <div class="comment mb-3">
                                    <p><strong>Utilisateur 1:</strong> Très bonne entreprise, expérience enrichissante !</p>
                                </div>
                                <div class="comment mb-3">
                                    <p><strong>Utilisateur 2:</strong> Bonne opportunité de stage, équipe accueillante.</p>
                                </div>
                                <!-- Autres commentaires -->
                            </div>
                        </div>

                    </div>

                    <!-- Sidebar de droite avec les informations et offres de l'entreprise -->
                    <div class="col-lg-4">
                        <div class="bg-light rounded p-5 mb-4 wow slideInUp" data-wow-delay="0.1s">
                            <h4 class="mb-4">Company Info</h4>
                            <p><i class="fa fa-angle-right text-primary me-2"></i>Branche: @Model.Branche </p>
                            <p><i class="fa fa-angle-right text-primary me-2"></i>Founded: </p>
                            <p><i class="fa fa-angle-right text-primary me-2"></i>Employees: </p>
                            <p><i class="fa fa-angle-right text-primary me-2"></i>Website: <a href="@Model.Webseite">@Model.Webseite</a></p>
                        </div>

                        
                        @if(Stelle.Any())
                        {
                            <div class="bg-light rounded p-5 wow slideInUp mt-4 mb-4" data-wow-delay="0.1s">
                                <div class="card text-center shadow-sm border-0">
                                    <div class="card text-center shadow-sm border-0">
                                        <div class="card-body">
                                            <h5 class="card-title">Stellenangebote</h5>
                                            <p class="card-text">
                                                <span class="display-4 text-primary">@Stelle.Count()</span>
                                            </p>
                                            <a href="/Stelleangebote/ByCompany/@Model.Id" class="btn btn-outline-primary">Zu den Stellenangeboten</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        }
                        @if(gallery.Any())
                        {
                            <!-- Galerie d'images (Slider) -->
                            <div class="mb-5">
                                <h4 class="mb-4">Galerie</h4>
                                <div class="slider">
                                    <div class="slides">
                                        @if (gallery.Any())
                                        {
                                            @foreach (var item in gallery.OrderBy(x => x.Id))
                                            {
                                                <img src="/images/LogoCompany/@item.ImageName" alt="Gallery Image">
                                            }
                                        }
                                    </div>
                                    <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
                                    <button class="next" onclick="moveSlide(1)">&#10095;</button>
                                </div>
                            </div>
                        }

                        
                    </div>

                </div>
            </div>
        </div>
        <!-- Company Details End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    <!-- JavaScript pour le slider -->
    <script>
        let currentIndex = 0;

        function moveSlide(direction) {
            const slides = document.querySelector('.slides');
            const totalSlides = slides.children.length;
            currentIndex = (currentIndex + direction + totalSlides) % totalSlides;
            const slideWidth = slides.children[0].clientWidth;
            slides.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
        }
    </script>
</body>

</html>
